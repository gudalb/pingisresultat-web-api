version: '3.8'
name: pingisresultat-infra

services:
  db:
    image: postgres:14.1-alpine
    restart: always
    environment:
      - POSTGRES_USER=${POSTGRES_USER}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
    ports:
      - '${POSTGRES_OUTER_PORT}:${POSTGRES_INNER_PORT}'
    volumes: 
      - db:/var/lib/postgresql/data
volumes:
  db:
    driver: local